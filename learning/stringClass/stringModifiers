#include <iostream>
#include <string>
using namespace std;
using namespace string;

int main()
{
    string greeting = "Hello";
    greeting += " there"; // this appends to the original string
    greeting.append(" there"); // also appends
    greeting.insert(3, "        "); // inserts some stuff at the location of the first parameter
    greeting.erases(3, 1); // erases a part of the codel
    cout << greeting.length() << endl; // you can also use size and it does almost the same thing (?)
}